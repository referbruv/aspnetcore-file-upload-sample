@model IEnumerable<ReaderStore.WebApp.Models.Entities.Reader>
    <div class="container-fluid">
        <div class="row my-2">
            <div class="col-12">
                <a class="float-right btn btn-primary" href="@Url.Action("New", "Readers")">Add Reader</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>EmailAddress</th>
                        <th>Work</th>
                        <th>Added On</th>
                    </tr>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("Index", "Readers", new { id = r.Id })">@r.Id</a></td>
                            <td>@r.Name</td>
                            <td>@r.EmailAddress</td>
                            <td><a href="@r.WorkPath">@r.WorkPath</a></td>
                            <td>@r.AddedOn</td>
                        </tr>
                    }

                    @if(Model.Count() == 0) {
                        <tr>
                            <td colspan="5">No Records Found</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>